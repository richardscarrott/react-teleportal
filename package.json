{
  "name": "react-controlled-portal",
  "version": "0.0.1",
  "description": "Take control over your Portals.",
  "author": {
    "name": "Richard Scarrott",
    "url": "https://richardscarrott.com"
  },
  "sideEffects": false,
  "main": "./dist/portal.js",
  "exports": {
    ".": {
      "types": "./dist/portal.d.ts",
      "import": "./dist/portal.mjs",
      "require": "./dist/portal.js"
    }
  },
  "homepage": "https://github.com/richardscarrott/react-controlled-portal#readme",
  "repository": "https://github.com/richardscarrott/react-controlled-portal",
  "keywords": [
    "react",
    "portal",
    "gateway",
    "wormhole",
    "animation",
    "ssr"
  ],
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "denoify": "^1.4.2",
    "esbuild": "^0.15.7",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3"
  },
  "scripts": {
    "build": "tsup src/portal.ts --format esm,cjs --dts --clean && rm -rf deno_dist && denoify && rm deno_dist/**.test.ts && rm deno_dist/**.test-d.ts",
    "test": "jest",
    "prepublishOnly": "npm run test && npm run build"
  },
  "files": [
    "dist"
  ],
  "denoify": {
    "includes": [
      "README.md",
      "LICENSE"
    ]
  }
}
